version: '3'
services:
  gitlab:
    container_name: gitlab
    image: "{{ image_repository }}/public/gitlab/gitlab-ce:latest"
    restart: always
    environment:
      EXTERNAL_URL: http://{{ gitlab_domain }}
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - "./config:/etc/gitlab"
      - "./logs:/var/log/gitlab"
      - "./data:/var/opt/gitlab"
